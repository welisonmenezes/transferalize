@page "/"
@namespace Testalize.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Testalize</title>
    <base href="~/" />

    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="_content/Transferalize/css/materialize.min.css" />
    <link rel="stylesheet" href="_content/Transferalize/css/flatpickr.min.css" />
    <link rel="stylesheet" href="_content/Transferalize/css/app.css" />

    <link href="css/site.css" rel="stylesheet" />
</head>
<body>
    <app>
        <component type="typeof(App)" render-mode="ServerPrerendered" />
    </app>

    <div id="blazor-error-ui">
        <environment include="Staging,Production">
            An error has occurred. This application may no longer respond until reloaded.
        </environment>
        <environment include="Development">
            An unhandled exception has occurred. See browser dev tools for details.
        </environment>
        <a href="" class="reload">Reload</a>
        <a class="dismiss">🗙</a>
    </div>

    <script src="_framework/blazor.server.js"></script>

    <script src="_content/Transferalize/js/materialize.min.js"></script>
    <script src="_content/Transferalize/js/flatpickr.min.js"></script>
    <script src="_content/Transferalize/js/app.js"></script>
</body>
</html>
