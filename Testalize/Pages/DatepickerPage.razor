@page "/datepicker"

<h3>Datepickers</h3>

<EditForm Model="@_exampleModel" OnValidSubmit="HandleValidSubmit">

    <DataAnnotationsValidator />

    <Datepicker Lang="en">
        <TextMask Pattern="00-00-0000">
            <div class="row">
                <div class="input-field col s12">
                    <InputText @bind-Value="_exampleModel.Birthdate" id="birthdate" class="validate" />
                    <label for="birthdate" class="">Datepicker Modal Default</label>
                </div>
            </div>
            <div class="row mt-m-20">
                <div class="col s12">
                    <code>@_exampleModel.Birthdate</code>
                </div>
            </div>
        </TextMask>
    </Datepicker>

    <Datepicker Lang="pt-BR" OpenOn="click">
        <TextMask Pattern="00-00-0000">
            <div class="row">
                <div class="input-field col s12">
                    <InputText @bind-Value="_exampleModel.Birthdate2" id="birthdate2" class="validate" />
                    <label for="birthdate2" class="">Datepicker Modal Open On Click</label>
                </div>
            </div>
            <div class="row mt-m-20">
                <div class="col s12">
                    <code>@_exampleModel.Birthdate2</code>
                </div>
            </div>
        </TextMask>
    </Datepicker>

    <Datepicker Type="flatpickr">
        <TextMask Pattern="00-00-0000">
            <div class="row">
                <div class="input-field col s12">
                    <InputText @bind-Value="_exampleModel.Birthdate3" id="birthdate3" class="validate" placeholder="Data" />
                    <label for="birthdate3" class="">Datepicker Inline Default</label>
                </div>
            </div>
            <div class="row mt-m-20">
                <div class="col s12">
                    <code>@_exampleModel.Birthdate3</code>
                </div>
            </div>
        </TextMask>
    </Datepicker>

    <Datepicker Type="flatpickr" OpenOn="click">
        <TextMask Pattern="00-00-0000">
            <div class="row">
                <div class="input-field col s12">
                    <InputText @bind-Value="_exampleModel.Birthdate4" id="birthdate4" class="validate" />
                    <label for="birthdate4" class="">Datepicker Inline  Open On Click</label>
                </div>
            </div>
            <div class="row mt-m-20">
                <div class="col s12">
                    <code>@_exampleModel.Birthdate4</code>
                </div>
            </div>
        </TextMask>
    </Datepicker>

    <div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>

    <ValidationSummary />

</EditForm>

@using System.ComponentModel.DataAnnotations;

@code {
    public class ExampleModel
    {
        [Required]
        public string Birthdate { get; set; }

        [Required]
        public string Birthdate2 { get; set; }

        [Required]
        public string Birthdate3 { get; set; }

        [Required]
        public string Birthdate4 { get; set; }
    }

    ExampleModel _exampleModel = new ExampleModel();

    protected override void OnInitialized()
    {
        _exampleModel.Birthdate = "06-01-1987";
        _exampleModel.Birthdate2 = "06-01-1987";
    }

    private void HandleValidSubmit()
    {
        Console.WriteLine("OnValidSubmit");
    }
}